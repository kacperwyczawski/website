---
import Chip from "@components/Chip.astro";
import Container from "@components/Container.astro";
import Reveal from "@components/Reveal.astro";
import Section from "@components/Section.astro";
import Layout from "@layouts/Layout.astro";
---

<script>
  if (
    navigator.language.startsWith("pl") &&
    localStorage.getItem("redirected") === null
  ) {
    localStorage.setItem("redirected", "true");
    window.location.href = "/pl";
  }
</script>
<Layout en>
  <div class="h-full flex flex-col">
    <main class="grid place-items-center p-2 md:p-4">
      <div class="max-w-6xl mx-auto">
        <Section heading="About me">
          <Container>
            <div class="prose dark:prose-invert prose-lg">
              I'm a web developer working with .NET, Astro, Vue, and <a
                href="/cv">some other stuff</a
              >. Currently, I'm pursuing my education at secondary technical
              school. I'm interested in programming, Linux and open source
              software.
            </div>
          </Container>
        </Section>
        <Section heading="Contact">
          <Container>
            <ul class="prose dark:prose-invert prose-lg list-dash ml-4">
              <li>
                Email: <a href="mailto:kacper@wyczawski.dev"
                  >kacper@wyczawski.dev</a
                >
              </li>
              <li>
                GitHub: <a href="https://github.com/kacperwyczawski"
                  >kacperwyczawski</a
                >
              </li>
              <li>
                Signal: <Reveal content="order.67" lang="en" />
              </li>
            </ul>
          </Container>
        </Section>
      </div>
    </main>
    <div class="grow"></div>
    <aside class="flex justify-center text-sm tracking-wide mb-2 mx-2">
      <Chip class="bg-neutral-100 dark:bg-slate-850">
        Last updated:
        <time datetime={new Date().toISOString()}>
          {new Date().toISOString().split("T")[0]}
        </time>
