---
import { dates } from "@utils/dates";
import { translate, translations } from "@utils/localization";

export interface Props {
  dateStart: Date;
  dateEnd: Date | undefined;
  location: string;
  title: string;
  company: string;
  companyUrl: string;
  type: string;
  lang: string;
}

const {
  dateStart,
  dateEnd,
  location,
  title,
  company,
  companyUrl,
  type,
  lang,
} = Astro.props;
// TODO: use slots, or maybe get rid of astro components at all (impement daisyui-like class components)
---

<li
  class="border-l dark:border-slate-800 last:border-none pl-6 pb-4 before:content[''] before:border before:rounded-full before:h-6 before:w-6 before:absolute before:border-fuchsia-700 dark:before:border-fuchsia-400 before:bg-neutral-50 dark:before:bg-slate-800"
>
  <div
    class="contrast-more:text-black text-neutral-400 dark:text-slate-600 text-lg leading-6"
  >
    {dates(lang, dateStart, dateEnd)} / {location}

    <!-- TODO: weird responsive breakpoints below can be replaced with container queries, when they will be available -->
    <span
      class="text-neutral-400 dark:text-slate-600 rounded-full px-1.5 py-0.5 border dark:border-slate-800 font-normal w-fit my-1 block text-sm sm:my-0 sm:inline-block sm:text-base md:my-1 md:block md:text-sm lg:my-0 lg:inline-block lg:text-base"
    >
      {translate(`cv.${type}` as keyof typeof translations, lang)}
    </span>
  </div>
  <div class="text-xl font-semibold">
    {title}
    {translate("cv.conjunction", lang)}
    <a
      href={companyUrl}
      class="underline decoration-fuchsia-700 dark:decoration-fuchsia-400 hover:decoration-2"
    >
      {company}
    </a>
  </div>
</li>

<style>
  li::before {
    left: calc(0.25rem + 0.5px); /* because border width = 1px */
  }
</style>
