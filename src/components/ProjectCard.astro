---
import Chip from "./Chip.astro";
import LinkButton from "./LinkButton.astro";

export interface Props {
    title: string;
    technologies: string[];
    status: string | null;
    sourceLink: string | null;
    liveLink: string | null;
    image: string | null;
}

const {
    title,
    technologies,
    sourceLink,
    liveLink,
    status = false,
    image = null,
} = Astro.props;
---

<div class="border rounded-lg">
    {
        image !== null && (
            <div class="p-4 border-b">
                <img
                    src={image}
                    alt={title + " mockup"}
                    class="w-full rounded-lg aspect-video object-cover grayscale hover:grayscale-0 transition-all duration-300"
                />
            </div>
        )
    }
    <div class="p-4 flex flex-col gap-4">
        <h1 class="text-2xl font-fancy text-fuchsia-700">
            {title}
            {status && <span class="text-sm text-neutral-700">({status})</span>}
        </h1>
        <div class="flex gap-1 sm:gap-2 flex-wrap">
            {technologies.map((tech) => <Chip>{tech}</Chip>)}
        </div>
        <p>
            <slot />
        </p>
        <div class="flex gap-4">
            {sourceLink && <LinkButton text="Source" link={sourceLink} />}
            {liveLink && <LinkButton text="Live" link={liveLink} />}
        </div>
    </div>
</div>
