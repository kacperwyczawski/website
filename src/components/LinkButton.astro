---
export interface Props {
	text: string;
	link: string;
}

const { link, text } = Astro.props;
---

<a
    href={link}
    class="block group rounded-lg border border-fuchsia-700 hover:bg-fuchsia-700 dark:border-fuchsia-400 dark:hover:bg-fuchsia-400 hover:text-white text-center py-2 px-4 grow transition-colors duration-75 shadow-xs"
>
    {text}
    <span class="group-hover:translate-x-2 inline-block transition-transform">
        -&gt;
    </span>
</a>
