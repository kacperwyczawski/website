---
import "../styles/global.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/sora";
import "@fontsource-variable/fira-code";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
	en?: boolean;
}
const { en } = Astro.props;
const lang = en ? "en" : "pl";
---

<!doctype html>
<html lang={en ? "en" : "pl"} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#a21caf" />
    <meta name="description" content="Kacper Wyczawski's website" />
    <meta property="og:title" content="Kacper Wyczawski's website" />
    <meta
      property="og:description"
      content="Kacper is a web developer and open-source enthusiast."
    />
    <meta property="og:url" content={import.meta.env.SITE} />
    <meta property="og:type" content="profile" />
    <meta property="og:profile:first_name" content="Kacper" />
    <meta property="og:profile:last_name" content="Wyczawski" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfilePage",
        "dateCreated": "2024-02-24T18:51:11+0000",
        "mainEntity": {
          "@type": "Person",
          "name": "Kacper Wyczawski",
          "description": "Kacper is a web developer, open-source enthusiast and student.",
          "sameAs": ["https://github.com/kacperwyczawski"]
        }
      }
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>Kacper Wyczawski</title>
    <style>
      body {
        --grid-color: light-dark(
            color-mix(in oklch, var(--color-neutral-200) 50%, transparent),
            color-mix(in oklch, var(--color-slate-800) 70%, transparent)
        );
        background-size: 32px 32px;
        background-image: linear-gradient(
            to right,
            var(--grid-color) 1px,
            transparent 1px
          ),
          linear-gradient(to bottom, var(--grid-color) 1px, transparent 1px);
        background-position: 10px 10px;
        background-attachment: fixed;
      }
    </style>
  </head>
  <body
    class="selection:bg-fuchsia-700/20 dark:text-neutral-100 h-full flex flex-col bg-neutral-50 dark:bg-slate-900"
  >
    <header
      class="flex flex-col gap-1 md:flex-row md:justify-between p-4 md:p-8 sticky top-0 z-50 backdrop-blur-sm bg-neutral-50/70 dark:bg-slate-900/70"
    >
      <h1
        class="font-fancy font-semibold text-3xl md:text-4xl dark:text-neutral-100"
      >
        <a href={getRelativeLocaleUrl(lang, "/")}>Kacper Wyczawski</a>
      </h1>
      <nav
        class="text-2xl leading-[2.5rem] flex gap-4 flex-row-reverse md:flex-row justify-end"
      >
        <a
          class="transition text-fuchsia-700 dark:text-fuchsia-400 md:text-black dark:md:text-neutral-100 md:hover:text-fuchsia-700 md:hover:dark:text-fuchsia-400"
          href={getRelativeLocaleUrl(lang, "/projects")}
        >
          {en ? "Projects" : "Projekty"}
        </a>
        <a
          class="transition text-fuchsia-700 dark:text-fuchsia-400 md:text-black dark:md:text-neutral-100 md:hover:text-fuchsia-700 md:hover:dark:text-fuchsia-400"
          href={getRelativeLocaleUrl(lang, "/cv")}
        >
          CV
        </a>
        <hr class="w-0 h-10 border-l border-neutral-200" />
        <div class="text-sm font-semibold flex flex-col dark:text-neutral-100">
          <a
            href={"/pl" + Astro.url.pathname}
            class={!en
              ? "text-fuchsia-700 dark:text-fuchsia-400 pointer-events-none"
              : ""}>PL</a
          >
          <a
            href={Astro.url.pathname.substring(3)}
            class={en
              ? "text-fuchsia-700 dark:text-fuchsia-400 pointer-events-none"
              : ""}>EN</a
          >
        </div>
      </nav>
    </header>
    <div class="grow">
      <slot />
    </div>
  </body>
</html>
