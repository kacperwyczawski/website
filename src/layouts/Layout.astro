---
import "@fontsource-variable/inter";
import "@fontsource-variable/sora";
import "@fontsource-variable/fira-code";
import { getEntry } from "astro:content";
const resume = await getEntry("definitions", "resume");
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#a21caf" />
    <meta name="description" content={resume.data.aboutMe} />
    <meta
      http-equiv="Content-Security-Policy"
      content="img-src https://* 'self'; child-src 'none'; base-uri 'none';"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Kacper Wyczawski</title>
  </head>
  <body class="selection:bg-fuchsia-700/20">
    <header
      class="flex flex-col gap-1 md:flex-row justify-between p-4 md:p-8 sticky top-0 z-50 backdrop-blur-sm bg-neutral-100/70 dark:bg-slate-900/70"
    >
      <h1 class="font-fancy font-semibold text-3xl md:text-4xl dark:text-neutral-100">
        <a class="cursor-default" href="/">Kacper Wyczawski</a>
      </h1>
      <nav class="text-2xl space-x-4 leading-[2.5rem]">
        <a
          class="transition text-fuchsia-700 dark:text-fuchsia-400 md:text-black dark:md:text-neutral-100 md:hover:text-fuchsia-700 md:hover:dark:text-fuchsia-400"
          href="/">Home</a
        >
        <a
          class="transition text-fuchsia-700 dark:text-fuchsia-400 md:text-black dark:md:text-neutral-100 md:hover:text-fuchsia-700 md:hover:dark:text-fuchsia-400"
          href="/projects">Projects</a
        >
      </nav>
    </header>
    <div class="background-pattern dark:text-neutral-100">
      <slot />
    </div>
  </body>
</html>
<style>
  body {
    --bg-color: #f5f5f5; /* tailwind: neutral-100 */
    --grid-color: #f1f1f1;
    background-size: 32px 32px;
    background-color: var(--bg-color);
    background-image:
      linear-gradient(
        to right, 
        var(--grid-color) 1px, 
        transparent 1px),
      linear-gradient(
        to bottom, 
        var(--grid-color) 1px, 
        transparent 1px);
    background-position: 10px 10px;
    background-attachment: fixed;
  }

  @media (prefers-color-scheme: dark) {
    body {
      --bg-color: #0f172a; /* tailwind: slate-900 */
      --grid-color: #141f31;
    }
  }
</style>
