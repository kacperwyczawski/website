{
  "extends": "astro/tsconfigs/strictest",
  "noImplicitAny": true,
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/shared/*", "src/components/*"],
      "@images/*": ["src/images/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"] // TODO: automatically generate this
    },
    "jsx": "preserve"
  }
}
